{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended"],
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "globals": {
    "NodeJS": "readonly",
    "NodeListOf": "readonly",
    "IntersectionObserverInit": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "prefer-const": "error",
    "no-var": "error"
  },
  "ignorePatterns": ["dist/**", "demo/**", "node_modules/**", "*.js"]
}
