{
  "name": "@austinorphan/markdown-docs-viewer",
  "version": "1.0.0",
  "description": "A generic, themeable markdown documentation viewer",
  "type": "module",
  "main": "dist/index.umd.cjs",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "themes"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && tsc",
    "preview": "vite preview",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:ci": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "demo:dev": "cd demo && vite",
    "demo:build": "cd demo && vite build",
    "demo:preview": "cd demo && vite preview"
  },
  "keywords": [
    "markdown",
    "documentation",
    "viewer",
    "docs"
  ],
  "author": "Austin Orphan <austin@austinorphan.com>",
  "license": "MIT",
  "peerDependencies": {
    "highlight.js": ">=11.0.0",
    "marked": ">=12.0.0",
    "marked-highlight": ">=2.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@types/marked": "^6.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.0.0",
    "highlight.js": "^11.9.0",
    "husky": "^9.1.7",
    "jsdom": "^24.0.0",
    "lint-staged": "^16.1.2",
    "marked": "^12.0.0",
    "marked-highlight": "^2.1.0",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AustinOrphan/markdown-docs-viewer.git"
  },
  "bugs": {
    "url": "https://github.com/AustinOrphan/markdown-docs-viewer/issues"
  },
  "homepage": "https://github.com/AustinOrphan/markdown-docs-viewer#readme",
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{js,jsx,json,md,html,css}": [
      "prettier --write"
    ]
  }
}
